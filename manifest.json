{
	"manifest_version": 2,
	
	"name": "Pomodoro Timer",
	"description": "Allows Pomodoro time tracking",
	"version": "1.0",

	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"storage"
	]
}